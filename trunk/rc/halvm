depend() {
	need hald
	use logger
}

start() {
	ebegin "Starting DISM"
	start-stop-daemon --start --pidfile /var/run/dism.pid --exec /usr/sbin/dism > /dev/null
	eend $?
}

stop() {
	ebegin "Stopping DISM"
	start-stop-daemon --stop --pidfile /var/run/dism.pid
	eend $?
}
